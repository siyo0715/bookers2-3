<% if book.already_favorited?(current_user) %>
  <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
    <i class="far fa-heart" aria-hidden="true" style="color: red"><%= book.favorites.count %></i>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id), method: :post, remote:true do %>
    <i class="far fa-heart" aria-hidden="true"><%= book.favorites.count %></i>
  <% end %>
<% end %>