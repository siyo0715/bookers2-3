<% if @book.errors.any? %>
  <div class = "error_explanation">
    <h3 style = "color: red;"><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
      <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
    </div>
    <% end %>
<div class='container px-5 px-sm-0'>
  <div class="row">
    <%= render "layouts/info", user: @user, book: @book %>

      <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
              <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(book.user.id) %>
              </td>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </table>
      </div>
  </div>
</div>
