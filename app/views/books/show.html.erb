<div class='container px-5 px-sm-0'>
  <div class="row">
    <%= render "layouts/info", user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
          <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th colspan="3"></th>
          </tr>
      <tr>
        <td>
         <%= link_to attachment_image_tag(@showbook.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(@user.id) %><br>
         <%= link_to @user.name,user_path(@user.id) %>
        </td>
        <td><%= link_to @showbook.title,book_path(@showbook.id) %></td>
        <td><%= @showbook.body %></td>

        <td class="favorite-showbtn_">
          <%= render 'favorites/favorite-indexbtn', book: @showbook%>
        </td>
        <% if @showbook.user.id == current_user.id %>
           <td><%= link_to 'Edit',edit_book_path(@showbook),class: "button is btn btn-success" %></td>
           <td><%= link_to 'Destroy', book_path(@showbook), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </tr>
      </table>
      <table>
          <% @showbook.book_comments.each do |book_book_comment| %>
          <tbody>
          <tr>
            <td>
              <%= attachment_image_tag book_book_comment.user, :profile_image, format:"jpeg", fallback: "no_image.jpg", size:"40x40"%><br>
              <%= link_to book_book_comment.user.name, user_path(book_book_comment.user_id) %>
            </td>
            <td style="padding: 10px;">
              <%= book_book_comment.comment %>
            </td>
            <% if book_book_comment.user == current_user %>
              <td>
                <%= link_to "Destroy", book_book_comment_path(book_book_comment.book, book_book_comment), class: "btn btn-sm btn-danger", method: :delete %>
              </td>
            <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= form_with(model:[@showbook, @book_comment], local: true) do |f| %>
        <%= f.text_area :comment, size: "90x5" %>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  </div>
</div>