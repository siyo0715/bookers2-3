<div class='container px-5 px-sm-0'>
  <div class="row">
    <%= render "layouts/info", user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
          <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
          </tr>
      <tr>
        <td>
         <%= link_to attachment_image_tag(@showbook.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(@user.id) %><br>
         <%= link_to @user.name,user_path(@user.id) %>
        </td>
        <td><%= link_to @showbook.title,book_path(@showbook.id) %></td>
        <td><%= @showbook.body %></td>

        <% if @showbook.user.id == current_user.id %>
           <td><%= link_to 'Edit',edit_book_path(@showbook),class: "button is btn btn-success" %></td>
           <td><%= link_to 'Destroy', book_path(@showbook), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </tr>
      </table>
    </div>
  </div>
</div>